<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="list_item">
        <item name="android:padding">6dp</item>
        <item name="android:background">@color/list_bg</item>
    </style>

    <style name="profile_image">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="message_text">
        <item name="android:textColor">@color/message_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="details_text">
        <item name="android:textColor">@color/details_text</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>