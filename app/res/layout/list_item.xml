<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/list_item">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="4dip">

        <ImageView
                android:id="@+id/list_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginRight="6dip"
                android:layout_marginBottom="6dip"
                style="@style/profile_image"/>

        <TextView android:id="@+id/message_text"
                  style="@style/message_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="2dp"
                  android:gravity="left"
                  android:layout_weight="0"
                  android:singleLine="false"
                  android:text="Sample text here where we have multiple lines. Tweet forever and tell everyone about your day!."
                  />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="6dip">

        <TextView android:layout_width="fill_parent"
                  android:textColor="@color/details_text"
                  android:gravity="right"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:id="@+id/details_text"
                  android:text="johndoe at 03:24pm on 02/01/2013" />

    </LinearLayout>

</LinearLayout>