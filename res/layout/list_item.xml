<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#01336b"
              android:layout_width="fill_parent"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:padding="6dip">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="4dip">

        <ImageView
                android:id="@+id/list_image"
                android:background="@android:color/white"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:padding="2dip"
                android:layout_marginRight="6dip"
                android:layout_marginBottom="6dip"/>

        <TextView android:id="@+id/top_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:gravity="center_vertical"
                  android:layout_weight="0"
                  android:textSize="16dp"
                  android:text="Sample text here where we have multiple lines. Tweet forever and tell everyone about your day!."
                  android:singleLine="false" />

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="6dip">

        <TextView android:layout_width="fill_parent"
                  android:textColor="#dedede"
                  android:gravity="right"
                  android:layout_height="wrap_content"
                  android:id="@+id/details_text"
                  android:text="joshuariddle at 03:24pm on 02/01/2013"
                  android:singleLine="true" />

    </LinearLayout>

</LinearLayout>